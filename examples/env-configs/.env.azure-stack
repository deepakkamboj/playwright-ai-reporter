# =============================================================================
# AZURE STACK CONFIGURATION
# This configuration uses: Azure DevOps (bugs/PRs) + Azure OpenAI + Email + MySQL
# =============================================================================

# AI Provider Configuration
# Supported providers: azure-openai, openai, anthropic, google, mistral
AI_PROVIDER=azure-openai

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Authentication Options:
# Option 1: Use API Key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# Option 2: Use Managed Identity (recommended for production in Azure)
# AZURE_USE_MANAGED_IDENTITY=true

# Bug Tracker Configuration
# Supported providers: github, azure-devops, jira
BUG_TRACKER_PROVIDER=azure-devops

# Azure DevOps Configuration (for both bugs and PRs)
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/your-organization
AZURE_DEVOPS_PROJECT=YourProjectName
AZURE_DEVOPS_PAT=your-personal-access-token-here
AZURE_DEVOPS_AREA_PATH=YourProjectName\\TestAutomation
AZURE_DEVOPS_ITERATION_PATH=YourProjectName\\Sprint 1

# Database Configuration
# Supported providers: sqlite, mysql, postgresql
DATABASE_PROVIDER=mysql

# MySQL Configuration (Azure MySQL or any MySQL server)
MYSQL_HOST=your-mysql-server.mysql.database.azure.com
MYSQL_PORT=3306
MYSQL_USER=your-username@your-mysql-server
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=test_results

# Notification Configuration
# Supported providers: email, slack, teams
NOTIFICATION_PROVIDER=email

# Email Configuration (Azure Communication Services or Office 365)
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@yourcompany.com
EMAIL_PASSWORD=your-email-password-or-app-password
EMAIL_FROM=Playwright Test Reporter <your-email@yourcompany.com>
EMAIL_TO=qa-team@yourcompany.com,dev-lead@yourcompany.com

# PR Provider Configuration
# Supported providers: github, azure-devops
PR_PROVIDER=azure-devops
# Azure DevOps config already defined above - same PAT, org, project

# Feature Flags
ENABLE_BUG_CREATION=true
ENABLE_PR_CREATION=true
ENABLE_DATABASE_LOGGING=true
ENABLE_NOTIFICATIONS=true

# Test Environment Metadata
TEST_ENVIRONMENT=production
BRANCH_NAME=main
COMMIT_HASH=
