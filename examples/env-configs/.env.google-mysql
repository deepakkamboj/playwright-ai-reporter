# =============================================================================
# GOOGLE AI + MYSQL CONFIGURATION
# This configuration uses: GitHub (bugs/PRs) + Google Gemini + Email + MySQL
# =============================================================================

# AI Provider Configuration
# Supported providers: azure-openai, openai, anthropic, google, mistral
AI_PROVIDER=google

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-1.5-pro

# Bug Tracker Configuration
# Supported providers: github, azure-devops, jira
BUG_TRACKER_PROVIDER=github

# GitHub Configuration (for both bugs and PRs)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=your-org-or-username
GITHUB_REPO=your-repo-name

# Database Configuration
# Supported providers: sqlite, mysql, postgresql
DATABASE_PROVIDER=mysql

# MySQL Configuration (Google Cloud SQL or any MySQL server)
MYSQL_HOST=your-mysql-instance.us-central1.sql.gcp.cloud
MYSQL_PORT=3306
MYSQL_USER=test_reporter_user
MYSQL_PASSWORD=your-secure-mysql-password
MYSQL_DATABASE=playwright_test_results

# Notification Configuration
# Supported providers: email, slack, teams
NOTIFICATION_PROVIDER=email

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=Playwright Test Reporter <your-email@gmail.com>
EMAIL_TO=team@example.com,manager@example.com

# PR Provider Configuration
# Supported providers: github, azure-devops
PR_PROVIDER=github
# GitHub config already defined above - same token, owner, repo

# Feature Flags
ENABLE_BUG_CREATION=true
ENABLE_PR_CREATION=true
ENABLE_DATABASE_LOGGING=true
ENABLE_NOTIFICATIONS=true

# Test Environment Metadata
TEST_ENVIRONMENT=production
BRANCH_NAME=main
COMMIT_HASH=
