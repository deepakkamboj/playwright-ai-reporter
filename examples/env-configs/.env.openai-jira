# =============================================================================
# OPENAI + JIRA STACK CONFIGURATION
# This configuration uses: Jira (bugs) + GitHub (PRs) + OpenAI + Email + SQLite
# =============================================================================

# AI Provider Configuration
# Supported providers: azure-openai, openai, anthropic, google, mistral
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORGANIZATION=org-your-organization-id

# Bug Tracker Configuration
# Supported providers: github, azure-devops, jira
BUG_TRACKER_PROVIDER=jira

# Jira Configuration
JIRA_HOST=https://your-company.atlassian.net
JIRA_EMAIL=your-email@yourcompany.com
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_PROJECT_KEY=QA
JIRA_ISSUE_TYPE=Bug

# Database Configuration
# Supported providers: sqlite, mysql, postgresql
DATABASE_PROVIDER=sqlite

# SQLite Configuration (local file-based database)
SQLITE_DATABASE_PATH=./data/test-results.db

# Notification Configuration
# Supported providers: email, slack, teams
NOTIFICATION_PROVIDER=email

# Email Configuration (SendGrid, Mailgun, or standard SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=Playwright Test Reporter <noreply@yourcompany.com>
EMAIL_TO=qa-team@yourcompany.com,product-owner@yourcompany.com

# PR Provider Configuration
# Supported providers: github, azure-devops
PR_PROVIDER=github

# GitHub Configuration (for PRs only, bugs go to Jira)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=your-org-or-username
GITHUB_REPO=your-repo-name

# Feature Flags
ENABLE_BUG_CREATION=true
ENABLE_PR_CREATION=true
ENABLE_DATABASE_LOGGING=true
ENABLE_NOTIFICATIONS=true

# Test Environment Metadata
TEST_ENVIRONMENT=qa
BRANCH_NAME=develop
COMMIT_HASH=
